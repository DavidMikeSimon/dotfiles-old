# start a terminal
bindsym $mod+Return exec /home/dsimon/bin-utils/roxterm-rainbow

# kill focused window
bindsym $mod+Shift+c kill

# start dmenu (a program launcher)
bindsym $mod+r exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+space focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+space move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# change focus between tiling / floating windows
bindsym $mod+t focus mode_toggle

# toggle tiling / floating
bindsym $mod+Shift+t floating toggle

bindsym $mod+Ctrl+h resize shrink width 10 px or 5 ppt
bindsym $mod+Ctrl+l resize grow width 10 px or 5 ppt
bindsym $mod+Ctrl+j resize shrink height 10 px or 5 ppt
bindsym $mod+Ctrl+k resize grow height 10 px or 5 ppt

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+o layout stacking
bindsym $mod+v layout toggle split

# enter fullscreen model for the focused container
bindsym $mod+f layout tabbed
bindsym F11 fullscreen

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child

# audio control
bindsym XF86AudioMute exec "amixer -q set Master toggle ; killall -USR1 i3status"
bindsym $mod+F1 exec "amixer -q set Master toggle ; killall -USR1 i3status"
bindsym XF86AudioLowerVolume exec "amixer -q set Master 5- ; killall -USR1 i3status"
bindsym $mod+F2 exec "amixer -q set Master 5- ; killall -USR1 i3status"
bindsym XF86AudioRaiseVolume exec "amixer -q set Master 5+ ; killall -USR1 i3status"
bindsym $mod+F3 exec "amixer -q set Master 5+ ; killall -USR1 i3status"
bindsym XF86AudioPlay exec "mpris-remote pause"
bindsym $mod+F5 exec "mpris-remote pause"
bindsym XF86AudioStop exec "mpris-remote stop"
bindsym $mod+F6 exec "mpris-remote stop"
bindsym XF86AudioPrev exec "mpris-remote prev"
bindsym $mod+F7 exec "mpris-remote prev"
bindsym XF86AudioNext exec "mpris-remote next"
bindsym $mod+F8 exec "mpris-remote next"

# lock
bindsym XF86Sleep exec xautolock -locknow
bindsym $mod+F12 exec xautolock -locknow

# reload the configuration file
bindsym $mod+Shift+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+Ctrl+r restart

bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

